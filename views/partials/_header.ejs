<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if(isLoggedIn===false){ %>
          <form method="GET" action="/login" class="form-inline my-2 my-lg-0">
            <button type="submit" class="btn btn-primary" class="btn btn-outline-success my-2 my-sm-0">Login</button>
          </form>
          <form method="GET" action="/register" class="form-inline my-2 my-lg-0">
            <button type="submit" class="btn btn-info" class="btn btn-outline-success my-2 my-sm-0">Register</button>
          </form>
          <% } else { %>
            <span class="navbar navbar-dark">
              Logged in as <%= userEmail %>
            </span>
            <form method="POST" action="/logout">
              <button type="submit" class="btn btn-outline-dark">Logout</button>
            </form>
            <% } %>

      </div>
    </div>
  </nav>
</header>